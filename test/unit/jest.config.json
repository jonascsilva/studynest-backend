{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "testEnvironment": "node",
  "testRegex": "test/unit/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^\\$/(.*)$": "<rootDir>/src/$1"
  },
  "collectCoverageFrom": ["./src/**/*.{!(module|entity),}.(t|j)s"],
  "coveragePathIgnorePatterns": ["/src/db/factories/", "/src/db/seeds/"],
  "coverageDirectory": "./coverage"
}
